@model CategoryModel
<head>
    <link rel="stylesheet" href="~/css/recipeApp.css" />

</head>
<body>
    <div class="mobile-container">
        <header id="header">
            <input type="text" />
            <button id="search">Search</button>
        </header>
        <div class="fav-container">
            <h3>Favorite Meals</h3>
            <ul> 
                @foreach (var cat in Model.Categories)
                {
                    <li><img src="@cat.strCategoryThumb" alt="" /><span>@cat.strCategory</span></li>
                }               
           
            </ul>
        </div>
    </div>
    <div class="meals">
        <div class="meal">
            <div class="meal-header">
                <img src="" alt="" />
            </div>
            <div class="meal-body">
                <h4></h4>
                <button>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="purple" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-1 h-1">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <script src="~/js/recipeApp.js"></script>
</body>