@model CategoryModel
<head>
    <link rel="stylesheet" href="~/css/recipeApp.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>
<body>
    <div class="mobile-container">
        <header id="header">
            <input type="text" />
            <button id="search">Search</button>
        </header>
        <div class="fav-container">
            <h3>Favorite Meals</h3>
            <ul> 
                @foreach (var cat in Model.Categories)
                {
                    <li><img src="@cat.strCategoryThumb" alt="" /><span>@cat.strCategory</span></li>
                }               
           
            </ul>
        </div>
    
    <div class="meals">
        <div class="meal">
            <div class="meal-header">
                    <img src="https://www.themealdb.com/images/media/meals/y7h0lq1683208991.jpg" alt="" />
            </div>
            <div class="meal-body">
                <h4>Veggie Veggies</h4>
                <button>
                    <i class="fa-regular fa-heart"></i>
                </button>
            </div>
        </div>
    </div>
    </div>
    <script src="~/js/recipeApp.js"></script>
</body>